
@model IEnumerable<DataLayer.Users>

@{
    ViewBag.Title = "مدیریت کاربران";
}

<h2 class="font-tahoma">مدیریت کاربران</h2>
<hr/>
<p>
    <a href="@Url.Action("Create")" class="btn btn-success btn-index-user">
        افزون کاربر جدید
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles.RoleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Roles.RoleTitle)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.IsActive) 
    </td>
    <td>
        @item.RegisterDate.MiladiToShamsi()
    </td>

    <td>
        <a class="btn btn-warning btn-sm btn-index-user" href="/Admin/Users/Edit/@item.UserID">
            <i class="fa fa-edit"></i>
        </a>
        <a class="btn btn-danger btn-sm btn-index-user" href="/Admin/Users/Delete/@item.UserID">
            <i class="fa fa-trash-o"></i>
        </a>
    </td>
</tr>
}

</table>
